<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ series_title }} by {{ display_name }}</title>
    <link rel="stylesheet" href="/css/snippet.css">
</head>

<body>
    <div class="series-header">
        <h1 class="snippet-title">{{ series_title }}</h1>
        <h2 class="snippet-display-name">{{ display_name }}</h2>
        <h3 class="snippet-user-name">{{ username }}#{{ discriminator }}</h3>
    </div>

    <hr class="snippet-separator">

    {% for snippet in snippets %}

    <div class="snippet-container">
        <div class="snippet" id="snippet-{{ snippet.message_id }}"></div>
    </div>

    <hr class="snippet-separator">

    {% endfor %}

    <script src="/js/discord-markdown.min.js"></script>
    <script src="/js/snippet.js"></script>
    <script>
        {% for snippet in snippets %}
        loadSnippet("{{ snippet.message_id }}");
        {% endfor %}
    </script>
</body>

</html>